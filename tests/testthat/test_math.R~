

## test anlge
x = c(1,0,0)
y = c(0,1,0)
z = c(0,0,1)

## Test Coord Sys
print(CM <- coordSystem(x,y))


v45 = c(1,1,0)
v45 = v45/norm(v45,type="2")
vm45 = c(1,-1,0)
vm45 = vm45/norm(vm45,type="2")


test_that("Angles of vectors relative to coord system", {
  expect_equal(angle(CM,v45)*180/pi), 45)
  expect_equal(angle(CM,vm45)*180/pi), -45)
})
