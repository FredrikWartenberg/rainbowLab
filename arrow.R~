arrow <-function(p1=c(0,0,0),p2=c(1,0,0),color="yellow")
{
    ray <- list('p1'     =  p1,
                'p2'     = p2,
                'color' = color)
    class(ray) <- "arrow"
    return(arrow)
}

render.arrow <- function(arrow)
{
    arrow3d(arrow$p1,
            arrow$p2,
            s=1/20,
            color=arrow$color)
}

